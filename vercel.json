{
  "version": 2,
  "github": {
    "enabled": false
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192"
    }
  },
  "rewrites": [
    {
      "source": "/((?!vara)(?!alph)(?!a0)(?!svm)(?!solana)(?!eclipse)(?!sonic)(?!fogo).*)",
      "destination": "/api/svm/$1"
    },
    {
      "source": "/a0/(.*)",
      "destination": "/api/a0/$1"
    },
    {
      "source": "/alph/(.*)",
      "destination": "/api/alph/$1"
    },
    {
      "source": "/vara/(.*)",
      "destination": "/api/vara/$1"
    },
    {
      "source": "/svm/(.*)",
      "destination": "/api/svm/$1"
    },
    {
      "source": "/solana/(.*)",
      "destination": "/api/solana/$1"
    },
    {
      "source": "/eclipse/(.*)",
      "destination": "/api/eclipse/$1"
    },
    {
      "source": "/sonic/(.*)",
      "destination": "/api/sonic/$1"
    },
    {
      "source": "/fogo/(.*)",
      "destination": "/api/fogo/$1"
    }
  ]
}
